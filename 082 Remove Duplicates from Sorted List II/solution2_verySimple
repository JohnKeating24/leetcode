class Solution {
public:
    ListNode* deleteDuplicates(ListNode* head) {
        ListNode dummy(-1);
        dummy.next=head;
        for(ListNode *pre=&dummy,*cur=pre->next;cur;){
            if(cur->next && cur->val==cur->next->val){
                while(cur->next && cur->val==cur->next->val)
                    cur->next=cur->next->next;
                cur=pre->next=cur->next;
            }else{
                pre=pre->next=cur;
                cur=cur->next;
            }
        }
        return dummy.next;
    }
};
